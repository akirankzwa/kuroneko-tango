.box
  = form_for @group do |f|
    - if @group.errors.any?
      #error_explanation
        %h2
          = pluralize(@group.errors.count, "error")
          prohibited this group from being saved:"
        %ul
          - @group.errors.full_messages.each do |message|
            %li= message

    .field
      %label.label Name
      .control
        = f.text_field :name, class: 'input'
    .field.is-grouped
      %p.control
        = f.submit 'Save', class: 'button'
      %p.control
        = link_to 'Back', groups_path, class: 'button'
