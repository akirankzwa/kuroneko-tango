<p id="notice"><%= notice %></p>

<h1>Speeches</h1>

<table>
  <thead>
    <tr>
      <th>Term</th>
      <th>Definition</th>
      <th>Voice</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speeches.each do |speech| %>
      <tr>
        <td><%= speech.term %></td>
        <td><%= speech.definition %></td>
        <td><%= speech.voice %></td>
        <td><%= speech.status %></td>
        <td><%= link_to 'Show', speech %></td>
        <td><%= link_to 'Edit', edit_speech_path(speech) %></td>
        <td><%= link_to 'Destroy', speech, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

